#!/bin/bash

# Backup the current /etc/hosts file
cp /etc/hosts /etc/hosts.backup

# Function to update /etc/hosts file
update_hosts() {
  local ip_address=$1
  local hostname=$2

  # Check if the hostname is already in the file
  if grep -q "$hostname" /etc/hosts; then
    # If it exists, replace the line with the new IP address
    sed -i "s/.*$hostname/$ip_address $hostname/" /etc/hosts
  else
    # If it does not exist, append the new entry
    echo "$ip_address $hostname" >> /etc/hosts
  fi
}

# Update localhost entry
update_hosts "127.0.0.2" "localhost"

# Update facebook.com entry
update_hosts "8.8.8.8" "facebook.com"

# Print the updated /etc/hosts file
echo "Updated /etc/hosts file:"
cat /etc/hosts

echo "Changes applied successfully."
